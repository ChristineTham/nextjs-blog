{
  "name": "nextjs-blog",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Chris Tham",
    "email": "chris.tham@hellotham.com",
    "url": "https://hellotham.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristineTham/nextjs-blog.git"
  },
  "scripts": {
    "dev": "env NODE_OPTIONS=--max_old_space_size=8192 next dev",
    "dev:watch": "next-remote-watch ./posts",
    "build": "env NODE_OPTIONS=--max_old_space_size=8192 next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "semi": false
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.13",
    "@headlessui/react": "^0.2.0",
    "@mdx-js/loader": "^1.6.21",
    "@mdx-js/react": "^1.6.21",
    "@next/mdx": "^10.0.3",
    "@tailwindcss/typography": "^0.3.1",
    "date-fns": "^2.11.1",
    "gray-matter": "^4.0.2",
    "next": "^10.0.3",
    "next-mdx-remote": "^1.0.0",
    "next-seo": "^4.17.0",
    "prism-react-renderer": "^1.1.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-icons": "^3.11.0",
    "react-live": "^2.2.3",
    "rehype": "^11.0.0",
    "rehype-katex": "^4.0.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remark-math": "3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "@types/mdx-js__react": "^1.5.3",
    "@types/node": "^14.14.9",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "autoprefixer": "^10.0.2",
    "babel-jest": "^26.6.3",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-react": "^7.21.5",
    "globby": "^11.0.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "next-remote-watch": "^0.2.0",
    "postcss": "^8.1.10",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.0",
    "rss": "^1.2.2",
    "tailwindcss": "^2.0.1",
    "typescript": "^4.1.2"
  }
}
